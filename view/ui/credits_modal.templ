package ui

import(
    "github.com/Abhinav-987/GenArtAI/view"
)

templ CreditsModal(creditsNeeded, userCredits int){
    <dialog id="credits_modal" class="modal modal-bottom sm:modal-middle">
        <div class="modal-box">
            <h3 class="text-2xl font-bold">Buy Credits 😥😥</h3>
            <div class="py-4">
                <p>Buy credits to keep using this feature!!!</p>
                <p>You have <span class="font-bold">{view.String(userCredits)}</span> 
                    but need <span class="font-bold">{view.String(creditsNeeded)}</span> </p>
            </div>
            <div class="modal-action flex justify-between">
                <a href="/buy-credits" class="btn">Buy Credits 🤑🤑</a>
                <form method="dialog">
                    <button class="btn">Close ❌</button>
                </form>
            </div>
        </div>
    </dialog>
    <script>
        document.getElementById("credits_modal").showModal()
    </script>
}